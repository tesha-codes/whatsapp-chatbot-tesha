{
  "containerDefinitions": [
    {
      "name": "tesha-app",
      "image": "825172087354.dkr.ecr.af-south-1.amazonaws.com/tesha-app",
      "cpu": 0,
      "environment": [
        {
          "name": "REDIS_URL",
          "value": "redis://:MjQM$3NXaXaXaXaXy3dzeGreenEhe@localhost:6379"
        }
      ],
      "portMappings": [
        {
          "name": "tesha-app-9000-tcp",
          "containerPort": 9000,
          "hostPort": 9000,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::tesha-bot/.env",
          "type": "s3"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "redis-data",
          "containerPath": "/data",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/tesha-app-task-definition",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-region": "af-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "redis",
      "image": "redis:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6379,
          "hostPort": 6379,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "redis-data",
          "containerPath": "/data",
          "readOnly": false
        }
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::tesha-bot/.env",
          "type": "s3"
        }
      ],
      "command": ["redis-server", "--requirepass", "${REDIS_PASSWORD}"]
    },
    {
      "name": "redis-insight",
      "image": "redislabs/redisinsight:1.13.0",
      "portMappings": [
        {
          "containerPort": 8001,
          "hostPort": 8001,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "redis-insight-data",
          "containerPath": "/db",
          "readOnly": false
        }
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::tesha-bot/.env",
          "type": "s3"
        }
      ]
    },
    {
      "name": "prometheus",
      "image": "prom/prometheus:latest",
      "portMappings": [
        {
          "containerPort": 9090,
          "hostPort": 9090,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "prometheus-data",
          "containerPath": "/prometheus",
          "readOnly": false
        }
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::tesha-bot/.env",
          "type": "s3"
        }
      ]
    },
    {
      "name": "grafana",
      "image": "grafana/grafana:latest",
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "grafana-data",
          "containerPath": "/var/lib/grafana",
          "readOnly": false
        }
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::tesha-bot/.env",
          "type": "s3"
        }
      ]
    },
    {
      "name": "loki",
      "image": "grafana/loki:latest",
      "portMappings": [
        {
          "containerPort": 3100,
          "hostPort": 3100,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "loki-data",
          "containerPath": "/loki",
          "readOnly": false
        }
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::tesha-bot/.env",
          "type": "s3"
        }
      ],
      "command": ["-config.file=/etc/loki/local-config.yaml"]
    },

    {
      "name": "promtail",
      "image": "grafana/promtail:latest",
      "mountPoints": [
        {
          "sourceVolume": "promtail-data",
          "containerPath": "/var/log",
          "readOnly": false
        }
      ],
      "environmentFiles": [
        {
          "value": "arn:aws:s3:::tesha-bot/.env",
          "type": "s3"
        }
      ],
      "command": ["-config.file=/etc/promtail/config.yml"]
    }
  ],
  "family": "tesha-app-task-definition",
  "taskRoleArn": "arn:aws:iam::825172087354:role/ECSTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::825172087354:role/ECSTaskExecutionRole",
  "networkMode": "awsvpc",
  "volumes": [
    {
      "name": "redis-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b98764883b3f3edd",
        "rootDirectory": "/redis-data",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "redis-insight-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b98764883b3f3edd",
        "rootDirectory": "/redis-insight-data",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "prometheus-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b98764883b3f3edd",
        "rootDirectory": "/prometheus-data",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "grafana-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b98764883b3f3edd",
        "rootDirectory": "/grafana-data",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "loki-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b98764883b3f3edd",
        "rootDirectory": "/loki-data",
        "transitEncryption": "ENABLED"
      }
    },
    {
      "name": "promtail-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b98764883b3f3edd",
        "rootDirectory": "/promtail-data",
        "transitEncryption": "ENABLED"
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
